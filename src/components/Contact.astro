---
import { Icon } from "astro-icon/components";
---

<section id="contact" class="Contact grid grid-cols-5 grid-rows-2 gap-3 mt-4">
    <div
        class="pt-1 flex justify-center border rounded-lg col-span-5 lg:col-span-2"
    >
        <span class="text-xl h-10 text-white">Jpira.dev@gmail.com</span>
    </div>

    <div
        id="copy"
        class="group hover:bg-teal-500 rounded-lg bg-tertiary row-start-2 lg:row-start-1 lg:col-start-3 flex justify-center items-center"
    >
        <Icon
            name={"codicon:copy"}
            class={"text-3xl group-hover:text-tertiary"}
        />
        <span
            id="MessageCopy"
            class="absolute pointer-events-none bottom-12 bg-slate-300 opacity-0 group-hover:text-black"
            >Copiado</span
        >
    </div>
    <div
        id="Send"
        class="hover:bg-teal-500 hover:text-tertiary rounded-lg bg-tertiary text-center col-span-2 row-start-2 lg:row-start-1 lg:col-start-4 lg:col-span-1 flex justify-center items-center"
    >
        <Icon name={"codicon:send"} class={"text-3xl"} />
    </div>
    <a
        id="Download"
        target="_blank"
        href="../../public/CV-Jose Julian Pira.pdf"
        class="hover:bg-teal-500 hover:text-tertiary rounded-lg bg-tertiary col-span-2 lg:col-span-4 lg:row-start-2 flex justify-center items-center"
    >
        <span class="text-2x">Download CV</span>
    </a>
</section>

<script>
    let copy = document.getElementById("copy");
    copy?.addEventListener("click", () => {
        navigator.clipboard.writeText("jpira.dev@gmail.com");

        const messageCopy = document.getElementById("MessageCopy");
        messageCopy?.classList.remove("opacity-0");
        messageCopy?.classList.add("opacity-100");

        setTimeout(() => {
            messageCopy?.classList.remove("opacity-100");
            messageCopy?.classList.add("opacity-0");
        }, 2000);
    });
</script>
