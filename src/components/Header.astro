---
import Logos from "@/components/logos.astro";
import { Icon } from "astro-icon/components";
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<header
    class="sticky left-0 top-0 flex h-20 w-full flex-row justify-between items-center lg:justify-normal space-x-6 p-8 text-white bg-primary border-b-2 border-slate-800"
>
    <p class="w-1/3 text-xl font-semibold">{title}</p>
    <nav class="h-full w-1/2 hidden lg:block">
        <ul class="flex flex-row gap-10">
            <li>
                <a
                    href="#"
                    class="border-b-2 border-transparent hover:border-tertiary hover:text-tertiary duration-300"
                    >Home</a
                >
            </li>
            <li>
                <a
                    href="#about"
                    class="border-b-2 border-transparent hover:border-tertiary hover:text-tertiary duration-300"
                    >About</a
                >
            </li>
            <li>
                <a
                    href="#projects"
                    class="border-b-2 border-transparent hover:border-tertiary hover:text-tertiary duration-300"
                    >Projects</a
                >
            </li>
            <li>
                <a
                    href="#footer"
                    class="border-b-2 border-transparent hover:border-tertiary hover:text-tertiary duration-300"
                    >Contact</a
                >
            </li>
        </ul>
    </nav>
    <Icon id={"mobile-menu"} name={"codicon:menu"} class={"block lg:hidden"} />
</header>
<nav class="h-full w-1/2 hidden absolute">
    <ul class="flex flex-col gap-10">
        <li>
            <a
                href="#"
                class="border-b-2 border-transparent hover:border-tertiary hover:text-tertiary duration-300"
