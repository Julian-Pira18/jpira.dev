---
import Contact from "../Contact.astro";
import PhotoProfile from "../Photo_profile.astro";
---

<section
    id="home"
    class="Home lg:grid lg:grid-cols-2 gap-x-20 lg:mx-10 lg:mt-12"
>
    <h1 class="text-3xl lg:text-6xl text-tertiary">
        HI! I'M <a href="#about">
            <span
                class="bg-gradient-to-r from-sky-600 to-teal-500 bg-clip-text text-transparent font-bold"
                >JULIAN PIRA</span
            ></a
        >
    </h1>
    <h2 class="text-2xl lg:text-5xl text-tertiary">Software developer</h2>
    <!-- <img class="mt-8 border h-80 row-[1/10] col-start-2" src="" alt="" /> -->
    <PhotoProfile />

    <p class="mt-8 text-2xl lg:text-5xl text-tertiary">Come with me</p>
    <p class="text-2xl lg:text-5xl text-tertiary">
        to know <a href="#projects">
            <span
                class="bg-gradient-to-r from-sky-600 to-teal-500 bg-clip-text text-transparent font-bold"
                >MY WORK</span
            ></a
        >
    </p>
    <p class="mt-8 text-2xl lg:text-5xl text-tertiary">
        Don't wait to <a href="#footer">
            <span
                class="bg-gradient-to-r from-sky-600 to-teal-500 bg-clip-text text-transparent font-bold"
                >CONTACT ME</span
            >
        </a>
    </p>

    <Contact />
</section>
