---
import Header from "../components/Header.astro";
import Projects from "@/components/sections/Projects.astro";
import About from "../components/sections/About.astro";
import Home from "@/components/sections/Home.astro";
import Footer from "@/components/Footer.astro";
import Skills from "@/components/sections/Skills.astro";
import FormContact from "@/components/FormContact.astro";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			name="description"
			content="Portafolio de Jose Julian Pira. Desarrollador de software"
		/>
		<title>Jpira.dev</title>
	</head>
	<body class="relative bg-primary">
		<Header title="Jpira.dev" />
		<main class="min-h-svh p-5 px-10">
			<Home />
			<div id="about" class="w-full h-10 lg:h-20 mt-14 lg:mt-28"></div>
			<About />
			<Skills />
			<div id="projects" class="w-full h-5 lg:h-10 mt-16 lg:mt-36"></div>
			<Projects />
			<div class="w-full h-10 lg:h-20 mt-14 lg:mt-28"></div>
		</main>
		<FormContact />
		<Footer />
	</body>
</html>
